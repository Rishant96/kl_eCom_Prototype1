@model kl_eCom.Web.Models.KL_Category

@{
    ViewBag.Title = "Category - Details";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Category - Details</h2>

<div>
    <h4>KL Category</h4>
    
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.Label("Parent Name")
        </dt>
        <dd>
            @if (Model.ParentCategory != null)
            {
                @Html.DisplayFor(model => model.ParentCategory.Name)
            }
            else
            {
                <text>-</text>
            }
        </dd>
    </dl>
</div>
<p>
    <div class="col-md-offset-1">
        @Html.ActionLink("Delete", "CategoryDelete", new { id = Model.Id }) | @Html.ActionLink("Edit", "CategoryEdit", new { id = Model.Id })
        <br />
        @Html.ActionLink("Allocate", "AllocateCategories", new { id = Model.Id })
    </div>
    <br />
    <br />
    @Html.ActionLink("Back to List", "Categories")
</p>
