@model kl_eCom.Web.Areas.KL_Admin.Models.AdminLoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Admin - Login</title>
    @Styles.Render("~/Content/css")
</head>
<body style="padding-top: 0; margin-top: 0;">
    <h2>Admin Login</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container" style="margin: 20px;">
            <div class="col-md-offset-4 col-md-4 col-md-offset-4" style="background-color: lightgray; padding-top: 20px;">
                <div class="row form-group">
                    <div class="col-sm-4">Admin Name:</div>
                    <div class="col-sm-8">@Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })</div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">E-mail:</div>
                    <div class="col-sm-8">@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">Password:</div>
                    <div class="col-sm-8">@Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })</div>
                </div>
                <div class="row form-group" style="background-color: lightgray;">
                    <div class="col-sm-offset-4 col-sm-4 col-sm-offset-4">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>