@model kl_eCom.Web.Areas.KL_Admin.Models.AdminMarketsPlaces_CreateCountryViewModel
@{
    ViewBag.Title = "Create - Country";
}

<h2>Create - Country</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary col-md-offset-2" value="Add Country" />
        </div>
    </div>
}
@Html.ActionLink("Go back", "Index", null, new { style = "margin-left: 15px" })