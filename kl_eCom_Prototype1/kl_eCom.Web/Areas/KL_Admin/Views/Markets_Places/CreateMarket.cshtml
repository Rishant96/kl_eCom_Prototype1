@model kl_eCom.Web.Areas.KL_Admin.Models.AdminMarketsPlaces_CreateMarketViewModel
@{
    ViewBag.Title = "Create - Market";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Create - Market</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CityId)
    @Html.HiddenFor(m => m.CityName)
    
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(m => m.CityName)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.CityName)
        </dd>
    </dl>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Latitude, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Latitude, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.Longitude, new { @class = "control-label col-md-1" })
            <div class="col-md-6">
                @Html.EditorFor(m => m.Longitude, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Longitude, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="submit" class="btn btn-primary col-md-offset-2" value="Create Market" />
    </div>
}
