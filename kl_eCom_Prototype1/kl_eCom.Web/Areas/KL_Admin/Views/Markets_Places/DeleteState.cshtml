@model kl_eCom.Web.Utilities.State
@{
    ViewBag.Title = "Delete - State";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Delete - State</h2>


<h4>Are you sure you want to delete this State?</h4>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(m => m.Name)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.Name)
    </dd>
    <dt>
        @Html.Label("Country Name")
    </dt>
    <dd>
        @Html.DisplayFor(m => m.Country.Name)
    </dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Name)
    @Html.HiddenFor(m => m.CountryId)

    <div class="col-md-offset-1">
        @Html.ActionLink("Go back", "StateDetails", new { id = Model.Id })
        <text> | </text>
        <input class="btn btn-default" type="submit" value="Delete" />
    </div>
}