            @Html.DisplayFor(m => m.VendorPackage.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VendorPackage.DisplayName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(m => m.VendorPackage.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VendorPackage.MaxProducts, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
