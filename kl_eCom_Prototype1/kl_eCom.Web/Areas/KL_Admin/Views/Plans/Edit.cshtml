@model kl_eCom.Web.Areas.KL_Admin.Models.AdminPlansEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit - Plan</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DisplayName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MaxProducts, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.MaxProducts, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.MaxProducts, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsExpirable, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.IsExpirable, new { htmlAttributes =
                                                new { @class = "checkbox", id = "IsExpirable" } })
            @Html.ValidationMessageFor(m => m.IsExpirable, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ValidityPeriod, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ValidityPeriod, new { htmlAttributes =
                                                   new { @class = "form-control", id = "ValidityTxtBox" } })
            @Html.ValidationMessageFor(m => m.ValidityPeriod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GST, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.GST, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.GST, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsEnabled, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.IsEnabled, new { htmlAttributes = new { @class = "checkbox" } })
            @Html.ValidationMessageFor(m => m.IsEnabled, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.IsActive, new { htmlAttributes = new { @class = "checkbox" } })
            @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Plans", controllerName: "Admin")
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        $('#ValidityTxtBox').prop('disabled', true);

        $('#IsExpirable').click(function () {
            if ($('#IsExpirable').prop('checked')) {
                $('#ValidityTxtBox').prop('disabled', false);
            }
            else {
                $('#ValidityTxtBox').prop('disabled', true);
            }
        });
    });
    </script>
}