@model kl_eCom.Web.Areas.KL_Admin.Models.AdminVendorsSpecializationCreateViewModel
@{
    ViewBag.Title = "Create - Specialization";
}

<h2>Create - Specialization</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsVisible, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.IsVisible, new { htmlAttributes = new { @class = "checkbox" } })
            @Html.ValidationMessageFor(m => m.IsVisible, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Parent Specialization", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedSpecialization, new SelectList(Model.Specializations,
                "Value", "Key"), "None", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedSpecialization, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}