@model kl_eCom.Web.Entities.Specialization
@{
    ViewBag.Title = "Specialization - Delete";
}

<h2>Specialization - Delete</h2>

<h3>Are you sure you want to delete this speciality?</h3>
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(m => m.Name)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.Name)
    </dd>
    <dt>
        @Html.LabelFor(m => m.IsVisible)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.IsVisible)
    </dd>
    <dt>
        @Html.DisplayNameFor(m => m.ParentSpecialization)
    </dt>
    <dd>
        @if (Model.ParentSpecialization is null || string.IsNullOrEmpty(Model.ParentSpecialization.Name))
        {
            <text>-</text>
        }
        else
        {
            @Html.DisplayFor(m => m.ParentSpecialization.Name)
        }
    </dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Name)
    @Html.HiddenFor(m => m.SpecializationId)

    <div class="form-group col-md-offset-1">
        @Html.ActionLink("Go back", "SpecializationDetails", new { id = Model.Id })
        <text> | </text>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div> 
}