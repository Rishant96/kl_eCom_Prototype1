@model kl_eCom.Web.Entities.Category
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsBase)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsBase)
        </dd>

        @Html.Label("Attributes", new { style = "display:block" })
        @foreach (var attr in Model.Attributes)
        {
            <dd>
                @Html.DisplayFor(m => attr.Name)
            </dd>
        }


        @Html.Label("Sub Categories", new { style = "display:block" })
        @foreach (var sub in Model.ChildCategories)
        {
            <dt>
                @Html.DisplayNameFor(m => sub.Name)
            </dt>

            <dd>
                @Html.DisplayFor(m => sub.Name)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Add SubCategory", "Create", new { storeId = ViewBag.storeId, catId = Model.Id })<br />
    @if (ViewBag.isLeaf == true)
    {
        @Html.ActionLink("Products", "Index", "Product", new { id = Model.Id }, null)<br />
    }
    @Html.ActionLink("Back to List", "Index")
     | 
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
     |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
</p>