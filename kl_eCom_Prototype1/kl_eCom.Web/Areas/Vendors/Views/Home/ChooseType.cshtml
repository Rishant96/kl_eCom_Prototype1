
@{
    ViewBag.Title = "Choose Type";
}
<div style="width: 100%;">
    <h2>Choose Type</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <text>
        <div style="width: 80%; margin: auto; margin-top: 20px">
            <div style="display: flex; justify-content: space-around">
                <div style="border: 2px solid grey; padding: 15px; width: 300px;
                            display: flex; justify-content: space-between">
                    <div>
                        <input type="radio" class="btn btn-primary" value="1"
                               name="type" style="margin: 5px 0" />
                    </div>
                    <div>
                        <label style="margin: 5px 0; text-decoration: underline">Individual</label>
                        <br />
                        <text>Without GST</text>
                    </div>
                </div>
                <div style="border: 2px solid grey; padding: 15px; width: 300px;
                            display: flex; justify-content: space-between">
                    <div>
                        <input type="radio" class="btn btn-primary" value="2"
                               name="type" style="margin: 5px 0" />
                    </div> 
                    <div>
                        <label style="margin: 5px 0; text-decoration: underline">Corporate</label>
                        <br />
                        <text>With GST</text>
                    </div>
                </div>
            </div>
            <div style="display: flex; justify-content: center; margin-top: 20px">
                <input type="submit" class="btn btn-primary" value="Next" />
            </div>
        </div>
        </text>
    }
</div>
