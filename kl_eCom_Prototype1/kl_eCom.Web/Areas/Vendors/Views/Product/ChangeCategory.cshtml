@model kl_eCom.Web.Areas.Vendors.Models.ProductChangeCategoryViewModel
@{
    ViewBag.Title = "Change Category";
}

<h2>Change Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CurrentCategory, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelFor(m => m.CurrentCategory)
        </div>
    </div>

    @{ 
        var selectList = new SelectList(Model.AvailableCategories);
    }
    <div class="form-group">
        @Html.LabelFor(m => m.AvailableCategories, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedCategory, selectList)
        </div>
    </div>

    <input type="submit" class="btn btn-primary col-md-offset-2" value="Change" />
</div>
}

@Html.ActionLink("Back to Details", "Details", new { id = Model.Id })