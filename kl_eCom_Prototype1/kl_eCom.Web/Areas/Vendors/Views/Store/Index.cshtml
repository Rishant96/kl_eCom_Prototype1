@model kl_eCom.Web.Areas.Vendors.Models.StoreIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Stores</h2>

@Html.ActionLink("+ Create Your Store", "Create")

@foreach (var store in Model.Stores)
{
    <br /><br />
    <text>Store: </text>@Html.ActionLink(store.Name, "Details", new { id = store.Id })
    <text>  (</text>@Html.ActionLink("View Catalog", "Index", "Category", new { id = store.Id }, null)
    <text>)</text>
    
    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                @Html.Label("Name")
            </th>
            <th>
                @Html.Label("Description")
            </th>
            <th>
                @Html.Label("Category")
            </th>
            <th>
                @Html.Label("Stock")
            </th>
            <th>
                @Html.Label("Price")
            </th>
            <th>

            </th>
        </tr>
        @{
            var stockedProducts = Model.Stocks[store];
        }
        @foreach (var stkProd in stockedProducts)
        {
            <tr>
                <td>
                    @if (stkProd.Product.ThumbnailData != null && stkProd.Product.ThumbnailMimeType != null)
                    {
                        <text>
                            <img class="img-thumbnail" width="45" height="45"
                                 src="@Url.Action("GetThumbnail", "Product",
                            new { stkProd.Product.Id })" />
                        </text>
                    }
                    else
                    {
                        <text>-</text>
                    }
                </td>
                <td>
                    @Html.ActionLink(stkProd.Product.Name, "Stock", "Product", new { prodId = stkProd.ProductId, storeId = stkProd.StoreId }, null)
                </td>
                <td>
                    @Html.DisplayFor(m => stkProd.Product.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => stkProd.Product.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => stkProd.CurrentStock)
                </td>
                <td>
                    @Html.DisplayFor(m => stkProd.Price)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteStock", new { id = stkProd.Id })
                </td>
            </tr>
        }
    </table>
}
<br />
@Html.ActionLink("Go Back", "Index", controllerName: "Vendor")