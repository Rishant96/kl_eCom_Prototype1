@model kl_eCom.Web.Models.EcomUser
@{
    ViewBag.Title = "Index";
}

<div>
    <img class="" width="45" height="45"
         style="display: inline"
         src="@Url.Action("GetLogo", "Vendor",
                            new { id = Model.Id })" />
    <h2 style="display: inline; margin-left: 15px; vertical-align: middle">
            @Model.VendorDetails.BusinessName</h2>
</div>

<div style="margin: 25px 50px 15px">
    @if (ViewBag.Flag)
    {
        <div class="alert alert-warning">
            <p>
                You have @ViewBag.CurrProds listed products in your inventory, but your plan only allows for
                @ViewBag.MaxProds listed products, please de-list some of your products to fix this issue.
                <br />
                <br />
                If you fail to do so within a week then, some of your products maybe de-listed automatically.
            </p>
        </div>
    }

    <div>
        @if (!ViewBag.IsPhoneVerified)
        {
            <text>To verify your mobile number, please click </text>
            @Html.ActionLink("here", "VerifyMobile")
            <br />
        }
    </div>

    <div>
        @if (!ViewBag.IsEmailVerified)
        {
            <text>To verify your email address, please click </text>
            @Html.ActionLink("here", "VerifyEmail")
            <br />
        }
    </div>

    <br />
    <br />
    
    @Html.ActionLink("Manage Profile", "Details", new { area = "Vendors" }, new { style = "display: block" })

    <br />
    <br />

    @Html.ActionLink("View Catalog", "Index", "Category", new { id = Model.Id }, null)
    <text> | </text>
    @Html.ActionLink("Go to Stores", "Index", "Store")
    <text> | </text>
    @Html.ActionLink("All Products", "AllProducts", controllerName: "Product")

    <br />

    @Html.ActionLink("My Customers", "Index", controllerName: "Customers")
    <text> | </text>
    @Html.ActionLink("Orders", "Orders", controllerName: "Customers")

    <br />
    @Html.ActionLink("Vouchers", "Vouchers")
    <text> | </text>
    @Html.ActionLink("Discounts", "Discounts")

    <br />
    <br />
    <br />

    @*@Html.ActionLink("Refferals", "Refferals")
        <text> | </text>
    @Html.ActionLink("Generate Exclusive Link", "ExclusiveLink")*@
</div>