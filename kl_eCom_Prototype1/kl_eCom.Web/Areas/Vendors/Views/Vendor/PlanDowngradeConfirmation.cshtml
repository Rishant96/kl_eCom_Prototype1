@model kl_eCom.Web.Areas.Vendors.Models.VendorPlanConfirmViewModel
@{
    ViewBag.Title = "Plan Downgrade - Confirmation";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Plan Downgrade - Confirmation</h2>

<dl class="dl-horizontal">
    <dt>
        Vendor Name
    </dt>
    <dd>
        @Html.DisplayFor(m => m.UserName)
    </dd>
    <dt>
        Current Plan
    </dt>
    <dd>
        @Html.DisplayFor(m => m.CurrentPlan.DisplayName)
    </dd>
    <dt>
        End Date
    </dt>
    <dd>
        @Html.DisplayFor(m => m.EndDate)
    </dd>
    <dt>
        New Plan
    </dt>
    <dd>
        @Html.DisplayFor(m => m.NewPlan.DisplayName)
    </dd>
    <dt>
        Cost
    </dt>
    <dd>
        @Html.DisplayFor(m => m.NewPlan.Price)
    </dd>
</dl>

<div>
    <text>Are you sure that you want to change over to the new plan<br />from the next billing cycle?</text>
    <div>
        @using (Html.BeginForm("PlanDowngradeConfirmation", "Vendor", new { id = Model.NewPlan.Id }, FormMethod.Post, null))
        {
            @Html.AntiForgeryToken()
            
            @Html.ActionLink("Go back", "ChangePlan")
            <text>|</text>
            <input type="submit" class="btn btn-success" value="Yes" />
        }
    </div>
</div>