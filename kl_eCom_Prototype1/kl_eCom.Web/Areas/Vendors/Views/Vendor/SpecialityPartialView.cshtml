@model kl_eCom.Web.Areas.Vendors.Models.VendorSpecialityViewModel

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Select Specialities</label>
        <div class="col-md-10" style="overflow-y:scroll; width:300px; height:250px">
            <ul>
                @foreach (var baseSpec in Model.BaseSpecialityDict.Keys)
                {
                    <li style="padding-left: 0px; list-style-type: none">
                        <input type="checkbox" value="@Model.AllSpecialities[baseSpec]" name="specs" 
                               @if (Model.SelectedSpecialities.Contains(Model.AllSpecialities[baseSpec]))
                               {
                                   <text>checked</text>
                               } />
                        <strong>@baseSpec</strong>
                    </li>
                    foreach (var spec in Model.BaseSpecialityDict[baseSpec] ?? new List<string>())
                    {
                        <li style="padding-left: 30px; list-style-type: none">
                            <input type="checkbox" value="@Model.AllSpecialities[spec]" name="specs"
                                   @if (Model.SelectedSpecialities.Contains(Model.AllSpecialities[spec]))
                                   {
                                        <text>checked</text>
                                   } />
                            @spec
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>