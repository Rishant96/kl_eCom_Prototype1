@model kl_eCom.Web.Models.CustomerEditProfileViewModel

@{
    ViewBag.Title = "Edit - Profile";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Edit - Profile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-2" })
            <div class="col-md-offset-2">
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-2" })
            <div class="col-md-offset-2">
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DOB, new { @class = "control-label col-md-2" })
            <div class="col-md-offset-2">
                @Html.EditorFor(m => m.DOB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top: 25px; margin-left: 16%; margin-bottom: 15px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Save Changes" />
            </div>
        </div>
    </div>
}
@Html.ActionLink("Go back", "CustomerProfile")