@model kl_eCom.Web.Areas.KL_Admin.Models.AdminChangePasswordViewModel
@{
    ViewBag.Title = "Admin - Change Password";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Admin - Change Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Email
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { id = "oldPassword", @class = "form-control" } })
                <input type="checkbox" id="showOldPswrd" style="position: relative; top: 2px; margin-right: 0px;" />
                show
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { id = "newPassword", @class = "form-control" } })
                <input type="checkbox" id="showNewPswrd" style="position: relative; top: 2px; margin-right: 0px;" />
                show
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-info col-md-offset-2"
                   value="Save Changes" style="position: relative; left: 15px" />
        </div>
    </div>
}
@Html.ActionLink("Go back", "AdminDetails")

@section scripts {
    <script>
       $(document).ready(function () {
           $('#showOldPswrd').click(function () {
               var checked = $(this).is(":checked");
               if (checked) {
                   $("#oldPassword").attr("type", "text");
               } else {
                   $("#oldPassword").attr("type", "password");
               }
           });
       });

       $(document).ready(function () {
           $('#showNewPswrd').click(function () {
               var checked = $(this).is(":checked");
               if (checked) {
                   $("#newPassword").attr("type", "text");
               } else {
                   $("#newPassword").attr("type", "password");
               }
           });
       });
    </script>
}