@model kl_eCom.Web.Areas.KL_Admin.Models.AdminEditEmailViewModel

@{ 
    ViewBag.Title = "Admin - Edit Email";
}

<h4 class="col-md-offset-1">Admin - Change Email</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-info col-md-offset-2" />
        </div>
    </div>
}
@Html.ActionLink("Go back", "AdminDetails", null, new { style = "margin-left: 100px" })