@model kl_eCom.Web.Areas.KL_Admin.Models.AdminMarketsPlaces_CityDetailsViewModel
@{
    ViewBag.Title = "City - Details";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>City - Details</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.LabelFor(m => m.CityName)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.CityName)
    </dd>
    <dt>
        @Html.LabelFor(m => m.StateName)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.StateName)
    </dd>
    <dt>
        @Html.LabelFor(m => m.Markets)
    </dt>
    <dd>
        @Html.ActionLink("+ Add Market", "CreateMarket", new { id = Model.CityId })
        <hr style="margin: 5px 0" />
        <ol>
        @foreach (var market in Model.Markets)
        {
            <li>
                @Html.ActionLink(market.Key, "MarketDetails", new { id = market.Value })
            </li>
        }
        </ol>
    </dd>
</dl>

<div class="row">
    <div class="col-md-offset-1">
        @Html.ActionLink("Delete", "DeleteCity", new { id = Model.CityId }, new { @class = "btn btn-danger" })
        <text> | </text>
        @Html.ActionLink("Edit", "EditCity", new { id = Model.CityId }, new { @class = "btn btn-success" })
    </div>
    @Html.ActionLink("Go back", "StateDetails", new { id = Model.StateId })
</div>

