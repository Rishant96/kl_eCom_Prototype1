@model kl_eCom.Web.Utilities.Place
@{
    ViewBag.Title = "Delete - City";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Delete - City</h2>

<d4>Are you sure you want to delete this City?</d4>

<dl class="dl-horizontal">
    <dt>
        @Html.LabelFor(m => m.Name)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.Name)
    </dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.StateId)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Name)

    <div class="row">
        <div class="col-md-offset-1">
            @Html.ActionLink("Go back", "CityDetails", new { id = Model.Id })
            <text> | </text>
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
}