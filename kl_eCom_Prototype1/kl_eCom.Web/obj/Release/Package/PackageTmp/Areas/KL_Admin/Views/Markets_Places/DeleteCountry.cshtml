@model kl_eCom.Web.Utilities.Country
@{
    ViewBag.Title = "Delete - Country";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Delete - Country</h2>

<h4>Are you sure you want to delete this Country?</h4>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(m => m.Name)
    </dt>
    <dd>
        @Html.DisplayFor(m => m.Name)
    </dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Name)

    <div class="col-md-offset-1">
        @Html.ActionLink("Go back", "CountryDetails", new { id = Model.Id })
        <text> | </text>
        <input class="btn btn-default" type="submit" value="Delete" />
    </div>
}