@model kl_eCom.Web.Areas.KL_Admin.Models.AdminMarketsPlaces_EditCityViewModel
@{
    ViewBag.Title = "Edit - City";
}

<h2>Edit - City</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CityId)
    @Html.HiddenFor(m => m.StateId)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.CityName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.CityName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CityName, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="submit" value="Save Changes" class="btn btn-primary col-md-offset-1" />
    </div>
}

@Html.ActionLink("Go back", "CityDetails", new { id = Model.CityId })