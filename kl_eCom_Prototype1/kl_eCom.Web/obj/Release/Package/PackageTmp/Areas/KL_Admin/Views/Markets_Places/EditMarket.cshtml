@model kl_eCom.Web.Areas.KL_Admin.Models.AdminMarketsPlaces_EditMarketViewModel
@{
    ViewBag.Title = "Edit - Market";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Edit - Market</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MarketId)

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.MarketName, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.MarketName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.MarketName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Latitude, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Latitude, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Latitude, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Longitude, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Longitude, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Longitude, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="submit" class="btn btn-primary col-md-offset-2" value="Save Changes" />
</div>
}