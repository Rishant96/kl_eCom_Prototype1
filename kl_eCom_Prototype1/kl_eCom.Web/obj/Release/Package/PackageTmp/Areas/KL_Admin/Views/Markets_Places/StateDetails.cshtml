@model kl_eCom.Web.Areas.KL_Admin.Models.AdminMarketsPlaces_IndexStateViewModel
@{
    ViewBag.Title = "Details - State";
}

<h2>Details - State</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.StateName)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.StateName)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.CountryName)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.CountryName) 
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Citites)
        </dt>
        <dd>
            <div>
                @Html.ActionLink("+ Add City", "CreateCity", new { id = Model.StateId })
                <text> | </text>
                @Html.ActionLink("Add Multiple Cities", "CreateMultipleCities", new { id = Model.StateId })
            </div>
            <hr style="margin: 5px 0" />
            <ol>
                @foreach (var city in Model.Citites)
                {
                    <li>@Html.ActionLink(city.Key, "CityDetails", new { id = city.Value })</li>
                }
            </ol>
        </dd>
    </dl>

    <div class="col-md-offset-1">
        @Html.ActionLink("Delete", "DeleteState", new { id = Model.StateId }, new { @class = "btn btn-danger" })
        <text> | </text>
        @Html.ActionLink("Edit", "EditState", new { id = Model.StateId }, new { @class = "btn btn-success" })
    </div>
    @Html.ActionLink("Go back", "CountryDetails", new { id = Model.CountryId }, new { style = "margin-left: 15px" })
</div>