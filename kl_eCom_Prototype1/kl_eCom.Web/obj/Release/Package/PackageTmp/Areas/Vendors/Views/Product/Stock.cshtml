@model kl_eCom.Web.Areas.Vendors.Models.ProductStockViewModel
@{
    ViewBag.Title = "Stock";
}

<h2>Stock Product</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(m => m.Stock, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Stock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2" style="display: flex; align-items: center; justify-content: flex-end">
            @Html.LabelFor(m => m.Price, new { @class = "control-label" })
            <text class="control-label" style="margin: 0 7px">( @Model.CurrencyType )</text>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MaxPerUser, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    @Html.EditorFor(m => m.MaxPerUser, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.MaxPerUser, "", new { @class = "text-danger" })
                </div>
                <div>
                    <text style="color: forestgreen; font-size: small">
                        Note: 'Max. per customer' might be limited by the stocked quantity
                    </text>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GST, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display: flex; align-items: center">
                @Html.EditorFor(m => m.GST, new { htmlAttributes = new { @class = "form-control",
                style = "width: 75px; margin-right: 10px"} })%
                @Html.ValidationMessageFor(m => m.GST, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
