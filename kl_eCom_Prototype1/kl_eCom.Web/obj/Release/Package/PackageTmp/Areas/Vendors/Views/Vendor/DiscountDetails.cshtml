@model kl_eCom.Web.Areas.Vendors.Models.VendorDiscountDetailsViewModel
@{
    ViewBag.Title = "Discoun tDetails";
    Layout = "~/Areas/Vendors/Views/Shared/_Layout.cshtml";
}

<h2>Discount Details</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.Label("Name: ")
    </dt>
    <dd>
        @Model.Discount.Name
    </dd>
    <dt>
        @Html.Label("Description: ")
    </dt>
    <dd>
        @Model.Discount.Description
    </dd>
    <dt>
        @Html.Label("Dicount Value: ")
    </dt>
    <dd>
        @Model.Discount.Value
    </dd>
    <dt>
        @Html.Label("Type: ")
    </dt>
    <dd>
        @Model.Constraint.Type
    </dd>
    <dt>
        @Html.Label("Status: ")
    </dt>
    <dd>
        @if (Model.Discount.IsActive)
        {
            <text>Active</text>
        }
        else
        {
            <text>In-active</text>
        }
    </dd>
</dl>

<div class="col-md-offset-1">
    @Html.ActionLink("Stop", "StopDiscount",
            new { id = Model.Discount.Id }, new { @class = "btn btn-sm btn-danger" })
    <text> | </text>
    @Html.ActionLink("Edit", "EditDiscount",
            new { id = Model.Discount.Id }, new { @class = "btn btn-sm btn-success" })
</div>