@model kl_eCom.Web.Models.CartVoucherViewModel


@using (Html.BeginForm("VoucherPartial", "Cart", new { }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    
    <div class="row" style="display: flex; align-items: center; padding-right: 0">
        <label class="control-label col-md-2" style="width: auto">Vouchers / Coupons</label>
        @Html.EditorFor(m => m.VoucherName, new { htmlAttributes = new {
               @class = "form-control col-md-10",
               style = "width: 100px;text-transform:uppercase;" }
        })
        <input type="submit" class="btn btn-default" style="margin-left: 15px" value="Apply" />
    </div>
}